  <script>
  $(document).ready(function () {
           $('#checkin_form').submit(function (event) {
                        event.preventDefault();
                        //collect the form data using Id Selector what ever data you need to send to server
                        var data = {};
                        data.checkin_email=$('#checkin_email').val();
                        data.checkin_market_id=$('#checkin_market_id').val();
                        $.ajax({
                            url: '/marketcheckin',
                            data: JSON.stringify(data),
                            processData: false,
                            type: 'POST',
                            contentType: 'application/json'
                        }).done(function(res) {
                            if (res.success) {
                                //$("#subscribe_form").get(0).reset() // or $('form')[0].reset()
                                $("#checkin_calltoaction").hide();
                                $("#checkin_form").hide();
                                $('#checkin_error_group').hide();
                                $('#checkin_result').html('Thanks for checking in (' + res.email + ') and enjoy your visit!');
                            } else {
                                $('#checkin_error_group').css('display', 'block');
                                  var errors = JSON.parse(JSON.stringify(res.errors));
                                  var errorsContainer = $('#checkin_errors');
                                  errorsContainer.innerHTML = '';
                                  var errorsList = '';

                                  for (var i = 0; i < errors.length; i++) {
                                    errorsList += '<li>' + errors[i].msg + '</li>';
                                  }
                                  errorsContainer.html(errorsList);
                                }
                          });
                    });
                });
  </script>
